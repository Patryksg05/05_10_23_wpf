<Window x:Class="egzamin_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:egzamin_app"
        mc:Ignorable="d"
        Title="Nadaj Przesyłkę, PESEL: 00000000000" 
        Height="350" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <GroupBox 
                Header="Rodzaj przesyłki" 
                Margin="30 20 20 5">

                <StackPanel>
                    <RadioButton
                        Content="Pocztówka"
                        IsChecked="False"
                        GroupName="type"
                        x:Name="postcard"
                        Margin="10 10 0 5"/>

                    <RadioButton
                        Content="List"
                        IsChecked="True"
                        GroupName="type"
                        x:Name="list"
                        Margin="10 0 0 5"/>

                    <RadioButton
                        Content="Paczka"
                        IsChecked="False"
                        GroupName="type"
                        x:Name="pack"
                        Margin="10 0 0 5"/>

                </StackPanel>
            </GroupBox>

            <Button
                Content="Sprawdz cene"
                Click="check_price_btn"
                Grid.Row="1"
                Height="20"
                Margin="30 -50 20 0"/>

            <Grid Grid.Row="2" Margin="30 -30 30 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image
                    x:Name="image"
                    Source="../../../images/list.png"/>

                <TextBlock
                    x:Name="price"
                    Grid.Column="1"
                    Text="Cena: 1,5 zl"
                    FontWeight="Bold"
                    FontSize="13"
                    Margin="20 15 0 0"
                    />

            </Grid>

        </Grid>
        
        <GroupBox 
            Header="Dane adresowe"
            Grid.Column="1"
            Margin="0 20 30 20">

            <StackPanel>

                <Label Content="Ulica z numerem" Margin="8 10 0 0"/>
                <TextBox 
                    x:Name="street_text_box"
                    Text="Konopnickiej 89"
                    Margin="10 0 10 0"/>

                <Label Content="Kod pocztowy" Margin="8 10 0 0"/>
                <TextBox 
                    x:Name="post_code_text_box"
                    Text="65124"
                    Margin="10 0 10 0"/>

                <Label Content="Miasto" Margin="8 10 0 0"/>
                <TextBox 
                    x:Name="city_text_box"
                    Margin="10 0 10 0"/>

            </StackPanel>
            
        </GroupBox>

        <StackPanel 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom">

            <Button
                Content="Zatwierdz"
                Margin="30 0 30 0"
                Click="confirm_btn_click"/>
            
        </StackPanel>
    </Grid>
</Window>
